</div>

<div class="container" id="datoCreacion">
    <h4>Agregue todos los datos:</h4>
    <div class="row">
        <div class="col">
            <label for="niknameInput" class="form-label">Nikname del creador</label>
            <input type="text" class="form-control" placeholder="Nikname" aria-label="Nikname" id="niknameInput" name="niknameInput">
        </div>
        <div class="col">
            <div class="form-group">
                <label for="exampleFormControlSelect1">Cantidad de Jugadores</label>
                <select class="form-control" id="cantidadJugadorJuegoInput">
                    <option value="2">2</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-outline-primary" style="margin-top:31px" id="btnCrearJuego">
                Crear <i class='bx bx-plus bx-burst-hover bx-border-circle'></i>
            </button>
        </div>
    </div>
</div>

<div class="container" id="datoCreacion">
    <h4>Datos del juego:</h4>
    <div class="row">
        <div class="col-3">
            <label for="creadorNombreJuegoServer" class="form-label">Creador:</label>
            <input type="text" class="form-control" id="creadorNombreJuegoServer" name="creadorNombreJuegoServer" disabled>
        </div>
        <div class="col-3">
            <label for="nombreJuegoServer" class="form-label">Id del juego:</label>
            <input type="text" class="form-control" id="nombreJuegoServer" name="nombreJuegoServer" disabled>
        </div>
        <div class="col-2">
            <label for="cantJugadorServer" class="form-label">Jugadores en la sala:</label>
            <input type="number" value="0" class="form-control" id="cantJugadorServer" name="cantJugadorServer" disabled>
        </div>
        <div class="col-md-4">

            <button type="submit" class="btn btn-outline-success" style="margin-top: 31px; float: right; " disabled id="iniciarPartida" onclick="iniciarPartida()">
                Iniciar Juego <i class='bx bx-check bx-burst-hover bx-border-circle'></i>
            </button>
            @*<button type="submit" class="btn btn-outline-primary" style="margin-top: 31px; margin-right: 5px; float: right;">
                Recargar <i class='bx bx-check bx-burst-hover bx-border-circle'></i>
            </button>*@
        </div>
    </div>
</div>

